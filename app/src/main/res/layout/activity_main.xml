<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:weightSum="100"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/task_list"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="100"
        android:background="@color/task_list_background"
        android:padding="16dip"
        tools:listitem="@layout/task_row"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:background="@color/new_task_background"
        android:padding="16dip">
        
        <EditText
            android:id="@+id/new_task"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:layout_marginEnd="16dip"
            android:hint="@string/aufgabe_hinzuf_gen"
            android:textColorHint="@color/hint_color"
            android:backgroundTint="@color/line_color"
            android:textColor="@color/hint_color"
            android:textCursorDrawable="@null"/>

        <ImageView
            android:id="@+id/send_button"
            android:layout_width="48dip"
            android:layout_height="48dip"
            android:src="@mipmap/send"
            android:tint="@color/new_task_send"
            android:contentDescription="@string/sned" />
        
    </LinearLayout>


</LinearLayout>